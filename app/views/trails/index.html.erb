<script src="/bootstrap/js/bootstrap.min.js"> </script>
<link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
<script src="/javascripts/clamp.js"> </script>
<script src="/javascripts/index.js"> </script>


<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center" id="webtrails-title">
      <h1>WebTrails</h1>
      <div>
        Logged in as <%=@user.email%>. <a href="/users/sign_out">logout</a>
      </div>
    </div>
  </div>
  <div class="text-center" id="create-trail-container">
    <div class="input-append centered control-group" id="trail-create-control-group">
      <input class="input-large" id="trail-name" type="text" placeholder="Trail Name">
      <button class="btn btn-primary" type="button" id="trail-create-button">Create!</button>
    </div>
  </div>
  <div class="user-trails">
    <%= render :partial => "display_trails", :locals => {:trails => @trails, :favicon_urls => @favicon_urls, :editAccess => true} %>
  </div>

  <div class="centered">
    <h1>Some Other Public Trails</h1>
  </div>

  <div class="public-trails">
    <%= render :partial => "display_trails", :locals => {:trails => @other_trails, :favicon_urls => @other_favicon_urls, :editAccess => false} %>
  </div>
</div>
