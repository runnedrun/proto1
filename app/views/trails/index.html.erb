<div class="container_12">
    <div class="grid_12 title-bar">Your Trails</div>
  <div class="clear"></div>
  <div class="grid_12 newTrailDiv">
    <div class="grid_6 suffix_3 prefix_3 alpha omega newTrailButtons">
        <div class="newTrailLabel">New Trail</div>
        <div class="trailNameOrBookmarklet">
        <input type="text" class="trailNameInput" placeholder="Trail Name"/>
        </div>
        </br>
        <input type="button" class="createTrailButton" value="Create Trail">
    </div>
  </div>
  <div class="clear"></div>
  <div class="grid_12 trailDisplayDiv">
    <%- @trails.each_with_index do |trail,i|%>
      <div class="grid_12 trailContainer alpha omega" >
        <div class="grid_4 alpha trailLinkDiv"><%= link_to(trail.name,trail, :class=>"trailLink") %></div>
        <div class="grid_4 suffix_4 omega trailSiteDisplayDiv">
            <%- @favicon_urls[i].each do |favicon_url| %>
                <div class=siteFavicon >
                  <img src="<%= favicon_url %>"/>
                </div>
            <%- end %>
        </div>
      </div>
      <div class="clear"></div>
    <%- end %>
  </div>
</div>