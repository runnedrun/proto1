<script type="text/javascript">
  var siteIDs = [ <%- @favicon_urls_with_ids_and_titles.each do |favicon_url_and_id|%>
    "<%= favicon_url_and_id[1] %>",
  <%- end %>
  ];
</script>
<link href="/stylesheets/bootstrap.min.css" rel="stylesheet" media="screen">

<div class=siteDisplayDiv>
  <%- @sites.each_with_index do |site,i| %>
    <iframe src=<%= Webtrails::Application::AJAX_REQUEST_URL %>/sites/<%= site.id %> id=<%= site.id %> class="siteDisplay <%= i==0 ? "currentSite":"notCurrent"  %>"></iframe>
  <%- end %>
</div>

<div class="noteLists">
  <%- @site_note_hash.each do |site_id, note_contents_and_id| %>
      <div class="noteList" id=site<%= site_id %>>
        <%- note_contents_and_id.each do |content, id| %>
            <div class="noteWrapper">
                <div class="noteContent" id="note<%= id %>"><%= content %></div>
            </div>
        <%-	end %>
      </div>
  <%- end %>
</div>
<div class="viewTrailToolbar">
<button class="btn btn-primary btn-mini navigateButton" id="previousSite">Previous Site</button>
<button class="btn btn-primary navigateButton" id="previousNote">Previous Note</button>

<div class="siteFavicons">
    <%- @favicon_urls_with_ids_and_titles.each_with_index do |favicon_id_and_title,i| %>
        <img class="faviconImage" src="<%= favicon_id_and_title[0] %>" id="favicon<%= favicon_id_and_title[1] %>" data-ot="<%= @sites[i].title%>" data-ot-delay="0" data-ot-tip-joint="bottom" data-ot-style="dark" data-site-url="<%= @sites[i].url%>"/>
    <%- end %>
</div>

<a class="btn btn-alert btn-mini navigateButton" id="goToSite" href="<%= @sites[0].url unless @sites.empty?%>" target="_blank">Visit Site</a>
<button id="showAllSitesButton" class="btn btn-warning navigateButton showList">Show all Sites</button>
<button class="btn btn-warning navigateButton showList" id="showNoteList" href="#">Show note list</button>

<button class="btn btn-primary navigateButton" id="nextNote"><b>Next note</b></button>
<button class="btn btn-primary btn-mini navigateButton" id="nextSite">Next site</button>
</div>
