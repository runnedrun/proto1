<div class="row-fluid">
  <div class="span10 offset1 centered trails-display">
    <%- trails.each_with_index do |trail,i|%>
        <div class= "row-fluid" id="trail-container-<%= trail.id %>">
          <div class="span1"></div>
          <div class="trail-container span10 <%= "last-trail-container" if i == trails.length - 1%>">
            <div class="trail-name centered">
              <div class="row-fluid">
                <div class = "offset4 span4 centered">
                  <a class="" href="<%= request.protocol + (request.port.blank? ? request.host : request.host_with_port) %>/trails/<%= trail.id%>">
                    <h3><%= trail.name %></h3>
                  </a>
                </div>
                <% if editAccess %>
                  <div class="offset3 span1 centered">
                    <button class="btn btn-danger removeTrailButton" data-trail-id="<%= trail.id %>"><i class="icon-trash"></i></button>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="sites-display-container" id="sites-display-container-<%= i %>" data-index="<%= i %>">
              <div class="sites-display">
                  <%- favicon_urls[i].each_with_index do |favicon_url, i| %>
                    <div class="site-display">
                      <a class="site-link" href="<%= request.protocol + (request.port.blank? ? request.host : request.host_with_port) %>/trails/<%= trail.id%>#<%= i%>">
                        <img src="<%= favicon_url %>" class="siteFavicon"/>
                        <span><%= trail.sites[i].title%></span>
                        <%- trail.sites[i].notes.each_with_index do |note, i| %>
                          <div class="note-container">
                            <div class="note-content"><%= note.content%></div>
                            <% if note.comment != ""%>
                              <div class="note-comment"><%= note.comment%></div>
                            <% end %>
                          </div>
                        <%- end %>
                      </a>
                    </div>
                  <%- end %>
              </div>
            </div>
          </div>
        </div>
    <%- end %>
  </div>
</div>