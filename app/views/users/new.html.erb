<div class="logIn" >
  <% form_for @user, :as => :user, :url => { :action => "create" }, :html => {:class => "loginForm"} do |f| %>
        <%= f.label :email %><br />
        <%= f.text_field :email %><br />
    <br />
        <%= f.label :password %><br />
        <%= f.password_field :password %><br />
    <br />
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %><br />
    <br />
  <%= f.submit "Sign Up!" %>
<% end %>
</div>